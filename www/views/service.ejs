<html>

<head>
    <title>Driplet - Service</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <style>
        <% include partials/sidebar %>
    </style>
    <style>
        
        .service-log {
            color: white;
            background-color: black;
            width: 100%;
            height: 35%;
            border-radius: 5px;
            margin-bottom: 7.5px;
            font-size: 16px;
            padding: 8px;
            overflow: scroll;
        }

        .service_page {
            padding: 10px;
            width: calc(100% - 15.1rem);
        }

        .new-service {
            font-size: 16px;
            padding-left: 22px;
            padding-top: 7px;
            padding-bottom: 7px;
        }

        .service-header {
            padding:0px;
        }

        .icon{ 
            float:left;
            width:14px; 
            height:14px; 
            position:relative; 
            display:block; 
          }
          .icon:before, 
          .icon:after{ 
            position:absolute; 
            content:""; 
            display:block; 
          }

        /* Gear */
        .icon-gear:before{
            width:14px;
            height:14px;
            box-shadow:0 0 0 4px inset; 
            border-radius:16px; 
            border:1px dashed; 
            top:-1px;
            left:-1px;
        }
    </style>
    <script>


        function stayDown() {
            var element = document.getElementById("output")
            element.scrollTop = element.scrollHeight;
        }

        var wsUri = "ws://localhost:3142/";
        websocket = new WebSocket(wsUri);
        websocket.onopen = function (evt) {
            onOpen(evt)
        };
        websocket.onmessage = function (evt) {
            onMessage(evt)
        };

        function onOpen(evt) {
            websocket.send(JSON.stringify(
                {
                    authentication: {
                        client_id: "<%=clientid%>",
                        token: "<%=token%>"
                    },
                    log_command: "<%=logservice%>"
                })
            )
        }

        function onMessage(evt) {
            document.getElementById('output').innerHTML += evt.data + "<br>"
            stayDown()
        }

        axios.defaults.headers.common['authorization'] = "<%= token %>"
    </script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <% include partials/navbar-gfx %>
        <a class="navbar-brand" href="#">Driplet</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="../../">Home <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <div class="btn-group">
                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                    Account
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <button class="dropdown-item" href="#">My Account</button>
                    <div class="dropdown-divider"></div>
                    <button class="dropdown-item" onclick="log_out()">Log Out</button>
                </div>
            </div>
        </div>
    </nav>
    <div class="container-fluid" id="wrapper">
        <div class="row">
            <div class="bg-light border-right" id="sidebar-wrapper">
                <a class="list-group-item list-group-item-action bg-light service-header" href="../services">
                    <div class="sidebar-heading">Your Services</div>
                </a>
                <div class="list-group list-group-flush">
                    <% for (var i = 0; i < services.length; i++) { %>
                        <a href=<%=services[i].id%> class="list-group-item list-group-item-action bg-light new-service"><%=services[i].name%></a>
                    <% } %>
                </div>
            </div>
            <!-- /#sidebar-wrapper -->
            <div class="service_page">
                <h1 style="display: inline;"><%= servicename %></h1> 
                <div id="output" class="service-log">
                </div>
                <div class="row">
                        <div class="col-md-4" style="padding-right: 15px; padding-left: 15px;">
                            <button onclick="start_service()" class="btn btn-success btn-block">Start</button>
                        </div>
                        <div class="col-md-4" style="padding-right: 15px; padding-left: 0px;">
                            <button onclick="stop_service()" class="btn btn-danger btn-block">Stop</button>
                        </div>
                        <div class="col-md-4" style="padding-right: 15px; padding-left: 0px;">
                            <button onclick="restart_service()" class="btn btn-warning btn-block" style="color: white;">Restart</button>
                        </div>
                </div>
            </div>
        </div>

    </div>
</body>

<% include partials/log-out %>

<script>
    function start_service() {
        axios.post('http://localhost:3141/endpoints/<%= clientid %>/services/<%= serviceid %>/start', {})
            .then(function (response) {
                console.log(response);
            })
            .catch(function (error) {
                console.log(error);
            });
    }

    function stop_service() {
        axios.post('http://localhost:3141/endpoints/<%= clientid %>/services/<%= serviceid %>/stop', {})
            .then(function (response) {
                console.log(response);
            })
            .catch(function (error) {
                console.log(error);
            });
    }

    function restart_service() {
        axios.post('http://localhost:3141/endpoints/<%= clientid %>/services/<%= serviceid %>/restart', {})
            .then(function (response) {
                console.log(response);
            })
            .catch(function (error) {
                console.log(error);
            });
    }
</script>

</html>